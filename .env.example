# Brok Configuration
# Copy this file to .env and fill in your values

# ===== LLM Provider Configuration =====
# Choose one: openai, openrouter, gemini
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash

# API Keys (only add the one for your chosen provider)
OPENAI_API_KEY=sk-...
OPENROUTER_API_KEY=sk-or-v1-...
GEMINI_API_KEY=AIza...

# ===== Gemini Advanced Features =====
# Enable extended thinking for better analysis (Gemini 2.0+ only)
# See: https://ai.google.dev/gemini-api/docs/thinking
GEMINI_THINKING_ENABLED=true

# ===== Application Settings =====
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
LOG_LEVEL=INFO

# ===== Security Settings =====
MAX_CONCURRENT_SCANS=3
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_SECOND=10

# ===== RAG / Supabase (Optional) =====
# For scan history and knowledge base
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_KEY=eyJ...

# ===== Chrome DevTools MCP (Optional) =====
# For browser automation and authentication
CHROME_MCP_ENABLED=true
CHROME_MCP_HEADLESS=true
